{
    "name": "demo-chat-bot",
    "version": "0.1.0",
    "description": "Start write chatbots with urban-bot and typescript",
    "repository": {
        "type": "git",
        "url": "https://github.com/jellydn/demo-chat-bot.git"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch --clean --onSuccess \"node dist/index.js\"",
        "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,md}\"",
        "lint": "eslint \"./src\" --ext \".js,.jsx,.ts,.tsx\"",
        "lint:fix": "npm run lint -- --fix",
        "start": "node dist/index.js",
        "start-tunnel": "ngrok http 8080",
        "test": "vitest run",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@types/react": "18.3.21",
        "@urban-bot/core": "1.0.9",
        "@urban-bot/facebook": "1.0.9",
        "@urban-bot/slack": "1.0.9",
        "@urban-bot/telegram": "1.0.9",
        "dotenv": "16.5.0",
        "pino": "8.21.0",
        "react": "18.3.1",
        "typescript": "5.8.3"
    },
    "devDependencies": {
        "@swc/core": "1.11.24",
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/node": "20.17.44",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "@vitest/coverage-c8": "0.33.0",
        "eslint": "8.57.1",
        "eslint-config-productsway": "1.3.4",
        "ngrok": "4.3.3",
        "prettier": "3.5.3",
        "tsup": "7.3.0",
        "tsx": "4.19.4",
        "unplugin-swc": "1.5.2",
        "vite": "4.5.14",
        "vitest": "0.34.6"
    },
    "engines": {
        "node": ">=16.20.0"
    }
}
